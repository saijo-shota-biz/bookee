{
  "name": "bookee",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "deploy": "wrangler deploy",
    "dev": "remix dev --manual -c \"npm start\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler dev ./build/index.js",
    "typecheck": "tsc",
    "format": "npx @biomejs/biome format --write ./app",
    "drizzle-generate": "drizzle-kit generate:sqlite",
    "drizzle:seed": "tsx prisma/seed.ts",
    "db:migration": "wrangler d1 migrations apply bookee --local"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/cloudflare": "^2.6.0",
    "@remix-run/css-bundle": "^2.6.0",
    "@remix-run/react": "^2.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.3",
    "isbot": "^4.1.0",
    "lucide-react": "^0.331.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@cloudflare/workers-types": "^4.20230518.0",
    "@remix-run/dev": "^2.6.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.14",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.1.6",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
